<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <% if current_user %>
        <ul class="nav">
          <li class="<%= 'active' if @tab.nil? || @tab == TabConstants::HOME %>">
            <%= link_to("Dashboard", root_path) %>
          </li>

          <li class="<%= 'active' if @tab == TabConstants::POLICIES %>">
            <%= link_to("My Policies", policies_path) %>
          </li>

          <li class="<%= 'active' if @tab == TabConstants::CLAIMS %>">
            <%= link_to("Claims", claims_path) %>
          </li>

          <li class="<%= 'active' if @tab == "" %>">
            <%= link_to("Health", root_path) %>
          </li>

          <li class="<%= 'active' if @tab == "" %>">
            <%= link_to("Reports", root_path) %>
          </li>

          <li class="<%= 'active' if @tab == "" %>">
            <%= link_to("Industry Updates", root_path) %>
          </li>

          <li class="dropdown <%= 'active' if @tab == TabConstants::HOME %>">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Corporate Products <b class="caret"></b> </a>
            <ul class="dropdown-menu">
              <li> <%= link_to "Fire Insurance", "" %> </li>
              <li> <%= link_to "Engineering Insurance", "" %> </li>
              <li> <%= link_to "Liability Insurance", "" %> </li>
              <li> <%= link_to "Travel Insurance", "" %> </li>
              <li class="divider"></li>              
              <li> <%= link_to "See all", "" %> </li>
            </ul>
          </li>
        </ul>
      <% end %>

      <ul class="nav pull-right">
        <% if current_user %>
          <li class="dropdown">
            <%= link_to((current_user.name + ' <b class="caret"></b>').html_safe, "#", :class => "dropdown-toggle", :data => {:toggle => "dropdown"}) %>
            <ul class="dropdown-menu">
              <li><%= link_to "View Profile", user_path(current_user) %></li>
              <li><%= link_to "Account Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "Logout", logout_path() %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to("Sign Up", new_user_path()) %></li>
          <li class="divider-vertical"></li>
          <li><%= link_to("Login", new_user_session_path()) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>