<thead>
  <tr>
    <th>Product</th>
    <th>Policy Number</th>
    <th>Insurer</th>
    <th>Premium</th>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Intimation</th>
    <th>Document</th>
  </tr>
</thead>
<tbody>
  <% @policies.each do |pol| %>
    <tr>
      <td><%= pol.product_type %></td>
      <td><%= pol.number %></td>
      <td><%= pol.insurer %></td>
      <td><%= pol.premium %></td>
      <td><%= pol.start.strftime("%b %d, %y") %></td>
      <td><%= pol.end_date.strftime("%b %d, %y") %></td>
      <td style="text-align:center;">
        <select style="width:55px;height:20px;margin-bottom:0;">
          <option value='1'><%= pol.intimation_required? ? "Yes" : "No" %></option>
          <option value='0'><%= pol.intimation_required? ? "No" : "Yes" %></option>
        </select>    
      </td>
      <td style="text-align:center;"><%= link_to("View", "/policy.pdf", :target => "_blank") %></td>
    </tr>
  <% end %>
</tbody>